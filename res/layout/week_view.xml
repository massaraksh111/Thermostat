<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/week_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" >

    <TextView
        android:id="@+id/week_view_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_view_label"
        android:layout_margin="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/monday_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Monday" />

        <TextView
            android:id="@+id/tuesday_button"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tuesday" />
        <TextView
            android:id="@+id/wednesday_button"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Wednesday" />

        <TextView
            android:id="@+id/thursday_button"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Thursday" />
        <TextView
            android:id="@+id/friday_button"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Friday" />
        <TextView
            android:id="@+id/saturday_button"
            android:layout_marginBottom="7dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Saturday" />
        
        <TextView
            android:id="@+id/sunday_button"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Sunday" />
            
    </LinearLayout>

</LinearLayout>