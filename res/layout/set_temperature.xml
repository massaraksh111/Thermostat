<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_temperature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="12" >

    <TextView
        android:id="@+id/setTempText"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_row="1"
        android:text="@string/set_temperature_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <NumberPicker
        android:id="@+id/temperature_big_setter"
        android:layout_width="140dp"
        android:layout_column="2"
        android:layout_columnSpan="2"
        android:layout_row="3"
        android:background="@drawable/temperature_picker" />

    <NumberPicker
        android:id="@+id/temperature_small_setter"
        android:layout_width="70dp"
        android:layout_column="4"
        android:layout_row="3"
        android:background="@drawable/temperature_picker" />

    <CheckBox
        android:id="@+id/set_temperature_vacation_button"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:layout_row="5"
        android:text="@string/set_temperature_vacation_label" />

    <Button
        android:id="@+id/set_temperature_apply_button"
        android:layout_width="114dp"
        android:layout_column="3"
        android:layout_columnSpan="2"
        android:layout_row="6"
        android:text="@string/apply_text" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="95dp"
        android:layout_height="1dp"
        android:layout_column="3"
        android:layout_row="0" />

    <Space
        android:layout_width="153dp"
        android:layout_height="1dp"
        android:layout_column="4"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="31dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:layout_width="1dp"
        android:layout_height="28dp"
        android:layout_column="0"
        android:layout_row="4" />

    <Space
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_column="0"
        android:layout_row="5" />

    <Space
        android:layout_width="1dp"
        android:layout_height="144dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="6" />

</GridLayout>
