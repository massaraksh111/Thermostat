<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_temperature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8" >

    <TextView
        android:id="@+id/setTempText"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:text="@string/set_temperature_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <NumberPicker
        android:id="@+id/temperature_big_setter"
        android:layout_width="140dp"
        android:layout_column="2"
        android:layout_row="3"
        android:background="@drawable/temperature_picker" />

    <NumberPicker
        android:id="@+id/temperature_small_setter"
        android:layout_width="70dp"
        android:layout_column="3"
        android:layout_row="3"
        android:background="@drawable/temperature_picker" />

    <Space
        android:layout_width="21dp"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="24dp"
        android:layout_height="1dp"
        android:layout_column="1"
        android:layout_row="0" />

    <Space
        android:layout_width="154dp"
        android:layout_height="1dp"
        android:layout_column="2"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="21dp"
        android:layout_column="0"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_row="2" />

    <Space
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_column="0"
        android:layout_row="4" />

    <CheckBox
        android:id="@+id/set_temperature_vacation_button"
        android:layout_column="0"
        android:layout_columnSpan="7"
        android:layout_gravity="center_horizontal"
        android:layout_row="5"
        android:layout_rowSpan="2"
        android:text="@string/set_temperature_vacation_label" />







    <Button
        android:id="@+id/set_temperature_apply_button"
        android:layout_width="114dp"
        android:layout_column="0"
        android:layout_columnSpan="8"
        android:layout_gravity="center_horizontal"
        android:layout_row="7"
        android:text="@string/apply_text" />

    <Space
        android:layout_width="1dp"
        android:layout_height="218dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="7" />

    <Space
        android:layout_width="100dp"
        android:layout_height="1dp"
        android:layout_column="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0" />

    <Space
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:layout_column="0"
        android:layout_gravity="fill_horizontal"
        android:layout_row="6" />

</GridLayout>
